<h1>Login</h1>
<div class = "body">
<%= form_tag author_sessions_path, method: :post do %>
  <div class = "form-group">
    <%= label_tag :email%><br />
    <%= text_field_tag :email, nil, class: "form-control", id: "form-class" %>
  </div>
  <div class= "form-group">
    <%= label_tag :password%><br />
    <%= password_field_tag :password, nil, class: "form-control", id: "form-class"%>
  </div>
  <div class="form-group">
    <%= submit_tag "Login", class: "btn btn-default" %>
    <%= link_to 'Back', articles_path, class: "btn btn-default" %>
  </div>
<% end %>
</div>
