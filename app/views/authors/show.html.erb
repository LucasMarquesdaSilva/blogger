<div class = "show-body-author">
  <div class = "body">
    <p id="notice"><%= notice %></p>

    <p>
      <strong>Username:</strong>
      <%= @author.username %>
    </p>

    <p>
      <strong>Email:</strong>
      <%= @author.email %>
