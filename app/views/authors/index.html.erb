<h1>Listing Authors</h1>
<div class = "body">
  <table class="table table-hover">
    <thead>
      <tr>
        <th>Username</th>
        <th>Email</th>
        <th><span class="glyphicon glyphicon-search" aria-hidden="true"></span></th>
        <th><span class="glyphicon glyphicon-edit" aria-hidden="true"></span></th>
        <th><span class="glyphicon glyphicon-remove" aria-hidden="true"></th>

      </tr>
    </thead>
    <tbody>
      <% @authors.each do |author| %>
        <tr>
          <td><%= author.username %></td>
          <td><%= author.email %></td>
          <td><%= link_to 'Show', author %></td>
          <% if logged_in? && current_user == author %>
            <td><%= link_to 'Edit', edit_author_path(author) %></td>
            <td><%= link_to 'Destroy', author, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            <% else %>
              <td></td>
              <td></td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
  <br>

  <%= link_to 'New Author', new_author_path, class: "btn btn-default" %>
</div>
