<div class = "body">
  <div class = "form-articles">
    <%= form_for(@article, html: {multipart: true}) do |f| %>
      <ul>
      <% @article.errors.full_messages.each do |error| %>
        <li><%= error %></li>
      <% end %>
      </ul>
      <div class = "form-group">
        <%= f.label :title %><br />
        <%= f.text_field :title, class: "form-control", placeholder: "title", size: 20 %>
      </div>
      <div class = "form-group">
        <%= f.label :body %><br />
        <%= f.text_area :body, placeholder: "Content" %>
      </div>
      <div class = "form-group">
        <%=f.label :tag_list %><br/>
        <%= f.text_area :tag_list, class: "text-tags", placeholder: "Tags" %>
      </div>
      <div class = "form-group">
        <% if @article.image.exists? %>
          <%= image_tag @article.image.url(:medium) %>
        <% end %>
        <%=  f.label :image, "Attach an Image" %><br/>
        <%=  f.file_field :image %>
      </div>
      <p>
        <%= f.submit class: "btn btn-default" %>
      </p>
    <% end %>
  </div>
</div>
